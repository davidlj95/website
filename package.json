{
  "name": "@davidlj95/website",
  "version": "0.0.0-PLACEHOLDER",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:public": "ng serve --host 0.0.0.0 --disable-host-check",
    "start:pullRequest": "ng serve --configuration pullRequest",
    "prebuild": "pnpm run '/prebuild:.*/'",
    "prebuild:font-subsets": "tsm scripts/src/generate-font-subsets.ts",
    "prebuild:release-file": "tsx scripts/src/generate-release-file.mts",
    "prebuild:render-templates": "tsm scripts/src/generate-templated-files.ts",
    "prebuild:simple-icons": "tsm scripts/src/generate-simple-icons.ts",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "dev:ssr": "ng run @davidlj95/website:serve-ssr",
    "serve:ssr": "node dist/@davidlj95/website/server/main.js",
    "build:ssr": "ng build && ng run @davidlj95/website:server",
    "prerender": "ng run @davidlj95/website:prerender",
    "prerender:pullRequest": "ng run @davidlj95/website:prerender:pullRequest",
    "security-txt": "tsm scripts/src/generate-security-txt.ts",
    "lint": "ng lint",
    "lint-staged": "lint-staged",
    "git-hooks": "husky",
    "commitlint-edit-msg": "commitlint --verbose --edit",
    "commitlint-last": "commitlint --verbose --from HEAD~1",
    "validate-renovate-config": "pnpm --package renovate dlx renovate-config-validator",
    "format-check": "prettier --check",
    "format-check-all": "pnpm run format-check .",
    "format": "prettier --ignore-unknown --write",
    "format-all": "pnpm run format .",
    "scripts:tsc": "cd scripts && tsc",
    "lighthouse": "lhci autorun"
  },
  "dependencies": {
    "@angular/animations": "17.3.2",
    "@angular/common": "17.3.2",
    "@angular/compiler": "17.3.2",
    "@angular/core": "17.3.2",
    "@angular/forms": "17.3.2",
    "@angular/platform-browser": "17.3.2",
    "@angular/platform-browser-dynamic": "17.3.2",
    "@angular/platform-server": "17.3.2",
    "@angular/router": "17.3.2",
    "@angular/ssr": "17.3.2",
    "@davidlj95/ngx-meta": "1.0.0-beta.2",
    "@fontsource/roboto": "5.0.12",
    "@fontsource/roboto-mono": "5.0.17",
    "@fortawesome/angular-fontawesome": "0.14.1",
    "@fortawesome/fontawesome-svg-core": "6.5.1",
    "@fortawesome/free-brands-svg-icons": "6.5.1",
    "compression": "1.7.4",
    "express": "4.19.2",
    "gardevoir": "1.0.0",
    "rxjs": "7.8.1",
    "simple-icons": "11.11.0",
    "tslib": "2.6.2",
    "zone.js": "0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "17.3.2",
    "@angular-eslint/builder": "17.3.0",
    "@angular-eslint/eslint-plugin": "17.3.0",
    "@angular-eslint/eslint-plugin-template": "17.3.0",
    "@angular-eslint/schematics": "17.3.0",
    "@angular-eslint/template-parser": "17.3.0",
    "@angular/cli": "17.3.2",
    "@angular/compiler-cli": "17.3.2",
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@commitlint/types": "19.0.3",
    "@lhci/cli": "0.12.0",
    "@types/compression": "1.7.5",
    "@types/express": "4.17.21",
    "@types/jasmine": "5.1.4",
    "@types/node": "20.12.2",
    "@types/signale": "1.4.7",
    "@types/subset-font": "1.4.3",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "browser-sync": "3.0.2",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-formatter-multiple": "2.0.0",
    "execa": "8.0.1",
    "glob": "10.3.12",
    "husky": "9.0.11",
    "jasmine-core": "5.1.2",
    "karma": "6.4.3",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.1",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "karma-junit-reporter": "2.0.1",
    "lint-staged": "15.2.2",
    "liquidjs": "10.10.2",
    "ng-mocks": "14.12.1",
    "prettier": "3.2.5",
    "semantic-release": "23.0.6",
    "subset-font": "2.3.0",
    "tsm": "2.3.0",
    "tsx": "4.7.1",
    "typescript": "5.4.3"
  },
  "packageManager": "pnpm@8.15.5",
  "eslint-formatter-multiple": {
    "formatters": [
      {
        "name": "stylish",
        "output": "console"
      },
      {
        "name": "junit",
        "output": "file",
        "path": "junit-lint.xml"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davidlj95/website.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
