{
  "name": "{{ siteName }}",
  "short_name": "{{ nickname }}",
  "description": "{{ description }}",
  "theme_color": "{{ themeColor }}",
  "icons": [
    {%  for icon in manifestJsonIcons %}{
      "src": "/assets/img/favicons/android-icon-{{ icon.size }}x{{ icon.size }}.png",
      "sizes": "{{ icon.size }}x{{ icon.size }}",
      "type": "image/png",
      "density": "{{ icon.density }}"
    }{%- unless forloop.last %},
    {% endunless %}{%  endfor %}
  ]
}
