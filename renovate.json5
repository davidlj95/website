{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'config:best-practices',
    'config:js-app',
  ],
  prHourlyLimit: 0,
  prConcurrentLimit: 5,
  schedule: [
    'at 9:00 am on the 1-7 day of the month on Saturday',
  ],
  timezone: 'Europe/Madrid',
  labels: [
    'dependencies',
  ],
  packageRules: [
    {
      matchPackagePatterns: [
        'dependencies',
      ],
      semanticCommitType: 'build',
      semanticCommitScope: 'deps',
    },
    {
      matchDepTypes: [
        'devDependencies',
      ],
      semanticCommitType: 'build',
      semanticCommitScope: 'deps-dev',
    },
    {
      matchManagers: [
        'github-actions',
      ],
      addLabels: [
        'github-actions',
      ],
    },
    {
      matchCategories: [
        'js',
      ],
      addLabels: [
        'javascript',
      ],
    },
    {
      matchCategories: [
        'node',
      ],
      addLabels: [
        'node',
      ],
    },
    {
      matchUpdateTypes: [
        'minor',
        'patch',
        'pin',
        'digest',
      ],
      automerge: true,
    },
    {
      matchDepTypes: [
        'devDependencies',
      ],
      automerge: true,
    },
    {
      matchPackageNames: [
        'typescript',
      ],
      allowedVersions: '>=4.9.3 <5.2.0',
    },
  ],
}
