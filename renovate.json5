{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
  ],
  "rangeStrategy": "pin",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 5,
  "schedule": [
    // Validate using https://codepen.io/rationaltiger24/full/ZExQEgK
    "at 9am on first saturday of month",
  ],
  "timezone": "Europe/Madrid",
  "labels": [
    "dependencies",
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*",
      ],
      "semanticCommitType": "build",
    },
    {
      "matchDepTypes": [
        "dependencies",
      ],
      "semanticCommitType": "fix",
    },
    {
      "matchManagers": [
        "github-actions",
      ],
      "addLabels": [
        "github-actions",
      ]
    },
    {
      "matchCategories": [
        "js",
      ],
      "addLabels": [
        "javascript",
      ]
    },
    {
      "matchCategories": [
        "node",
      ],
      "addLabels": [
        "node",
      ]
    }
  ]
}
