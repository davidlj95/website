{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "pin",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 5,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "semanticCommitType": "build"
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "semanticCommitType": "fix"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "addLabels": [
        "github-actions"
      ]
    },
    {
      "matchCategories": [
        "js"
      ],
      "addLabels": [
        "javascript"
      ]
    },
    {
      "matchCategories": [
        "node"
      ],
      "addLabels": [
        "node"
      ]
    }
  ]
}
